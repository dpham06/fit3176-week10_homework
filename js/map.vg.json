{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Death Rates Linked to Air Pollution (2017)",
    "width": "1600",
    "height": "900",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "/resources/ne_110m.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_wgs84_bounding_box"}
        },
        "mark": {
          "type": "geoshape",
          "fill": "#99c4e44b"
        }
      },
      {
        "data": {
          "url": "/resources/ne_110m.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "/resources/air_pollution_death_rates.csv"
              },
              "key": "Country",
              "fields": ["Death Rate"]
            }
          }
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "color": {
            "field": "Death Rate",
            "type": "quantitative",
            "scale": {"type": "linear"}
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Death Rate", "type": "quantitative"}
          ]
        }
      },
      {
        "data": {
          "url": "/resources/ne_110m.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {
          "type": "geoshape",
          "fill": null,
          "stroke": "lightgray"
        }
      },
      {
        "data": {
          "url": "/resources/ne_110m.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_wgs84_bounding_box"}
        },
        "mark": {
          "type": "geoshape",
          "fill": null,
          "stroke": "lightgray"
        }
      }
    ]
  }